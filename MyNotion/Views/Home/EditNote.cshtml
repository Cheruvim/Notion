@model WebApp_Like_Notion.Models.Note

@{
    if(ViewBag.Title == null)
        ViewBag.Title = "Home Page";
}

<div class="text-center">
    @using (Html.BeginForm())
    {
        <div class="form-group">
            <label>Заголовок:</label>
            @Html.EditorFor(n => n.Title, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            <label>Header:</label>
            @Html.EditorFor(n => n.Header, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            <label>Body:</label>
            @Html.TextAreaFor(x => x.Body, new { @class = "form-control" })
        </div>
        <div class="text-center">
            <input type="submit" value="Создать запись" class="btn btn-success" />
        </div>
    }
</div>
